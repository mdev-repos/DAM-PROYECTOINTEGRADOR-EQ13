<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".EmitirCarnetActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="68dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="217dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="156dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="256dp" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="101dp"
        android:layout_height="151dp"
        android:contentDescription="Logo del Club"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        app:srcCompat="@drawable/club_deportivo_logo" />

    <TextView
        android:id="@+id/ClubDeportivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:text="Club Deportivo"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />


    <View
        android:id="@+id/rectangleBackground"
        android:layout_width="400dp"
        android:layout_height="251dp"
        android:background="@drawable/carnet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.614" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnImprimir"
        android:layout_width="138dp"
        android:layout_height="62dp"
        android:layout_marginTop="448dp"
        android:text="IMPRIMIR"
        app:backgroundTint="@color/darkGreen"
        app:cornerRadius="11dp"
        app:layout_constraintEnd_toStartOf="@+id/btnCancelar"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ClubDeportivo" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCancelar"
        android:layout_width="138dp"
        android:layout_height="62dp"
        android:layout_marginTop="448dp"
        android:text="CANCELAR"
        app:backgroundTint="@color/btnRed"
        app:cornerRadius="11dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnImprimir"
        app:layout_constraintTop_toBottomOf="@+id/ClubDeportivo" />

    <View
        android:id="@+id/view"
        android:layout_width="296dp"
        android:layout_height="1dp"
        android:layout_marginTop="560dp"
        android:background="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ClubDeportivo" />

    <ImageButton
        android:id="@+id/IconButton1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/circular_background"
        android:contentDescription="Cerrar sesiÃ³n"
        android:padding="12dp"
        android:src="@drawable/outline_exit_to_app_24"
        app:layout_constraintEnd_toStartOf="@+id/IconButton2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/btnImprimir" />

    <ImageButton
        android:id="@+id/IconButton2"
        android:layout_width="60dp"
        android:layout_height="60dp"

        android:background="@drawable/circular_background"
        android:contentDescription="Ir a la pantalla de inicio"
        android:padding="12dp"
        android:src="@drawable/outline_home_24"
        tools:layout_editor_absoluteX="178dp"
        tools:layout_editor_absoluteY="818dp" />

    <ImageButton
        android:id="@+id/IconButton3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="57dp"
        android:background="@drawable/circular_background"
        android:contentDescription="Volver a la pantalla anterior"
        android:padding="12dp"
        android:src="@drawable/baseline_arrow_back_24"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/IconButton2"
        app:layout_constraintTop_toBottomOf="@+id/btnCancelar" />


</androidx.constraintlayout.widget.ConstraintLayout>