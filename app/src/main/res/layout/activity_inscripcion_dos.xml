<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/inscripcionDos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".InscripcionDosActivity"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/logo_layout"
        android:layout_width="match_parent"
        android:layout_height="160sp"
        android:orientation="vertical"
        android:layout_marginTop="10sp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="140sp"
            android:layout_gravity="center"
            android:src="@drawable/club_deportivo_logo"
            android:scaleType="centerInside"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20sp"
            android:text="CLUB DEPORTIVO"
            android:fontFamily="sans-serif-black"
            android:textStyle="bold"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:textSize="11sp"
            tools:ignore="HardcodedText"
            android:layout_marginBottom="50sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/form_layout"
        android:layout_width="match_parent"
        android:layout_height="290sp"
        android:orientation="vertical"
        android:layout_marginTop="30sp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingrese los datos del cliente"
            android:fontFamily="sans-serif-black"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="15sp"
            tools:ignore="HardcodedText"
            android:layout_marginBottom="50sp"/>

        <EditText
            android:id="@+id/emailTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8sp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            tools:ignore="HardcodedText"
            android:textColor="@color/lightGrey"
            android:background="@drawable/edit_fondo"
            android:layout_marginBottom="15sp">

        </EditText>

        <EditText
            android:id="@+id/telefonoTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8sp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:hint="Telefono"
            android:inputType="phone"
            tools:ignore="HardcodedText"
            android:textColor="@color/lightGrey"
            android:background="@drawable/edit_fondo"
            android:layout_marginBottom="15sp">

        </EditText>

        <EditText
            android:id="@+id/telUrgenciaTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8sp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:hint="Telefono de contacto de urgencia"
            android:inputType="phone"
            tools:ignore="HardcodedText"
            android:textColor="@color/lightGrey"
            android:background="@drawable/edit_fondo"
            android:layout_marginBottom="15sp">

        </EditText>

        <CheckBox
            android:id="@+id/fichaMedicaCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8sp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:text="Ficha Medica"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/seleccion_layout"
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:orientation="horizontal"
        android:layout_marginTop="40sp"
        android:layout_marginBottom="40sp"
        android:layout_marginLeft="60sp"
        android:layout_marginRight="60sp">

        <Button
            android:id="@+id/btnSocioSelec"
            android:layout_width="120sp"
            android:layout_height="match_parent"
            android:background="@drawable/boton_estilo"
            app:backgroundTint="@color/darkGreen"
            android:text="Socio"
            tools:ignore="HardcodedText"
            android:layout_marginEnd="40sp"/>


        <Button
            android:id="@+id/btnNoSocioSelec"
            android:layout_width="120sp"
            android:layout_height="match_parent"
            android:background="@drawable/boton_estilo"
            app:backgroundTint="@color/darkGreen"
            android:text="No Socio"
            tools:ignore="HardcodedText"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15sp">

        <Button
            android:id="@+id/btnAnteriorInsDos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/boton_estilo"
            app:backgroundTint="@color/btnBlue"
            android:text="Anterior"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="15dp"
            tools:ignore="HardcodedText"/>


        <Button
            android:id="@+id/btnCancelarInsDos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/boton_estilo"
            app:backgroundTint="@color/btnRed"
            android:text="CANCELAR"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/options_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>